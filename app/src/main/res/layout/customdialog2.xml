<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/dialog_bg2">


        <TextView
            android:id="@+id/TitleDialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Do You Want To Exit?!"
            android:textStyle="italic|bold"
            android:textSize="25sp"
            android:textColor="#37b0e4"
            android:gravity="center"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="5sp"/>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="2sp"
           android:background="#37b0e4"
           android:weightSum="3"/>
        <TextView
            android:id="@+id/TotalQN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Do You Want To Exit?!"
            android:textColor="#ffffff"
            android:layout_marginTop="5dp"
            android:textSize="20sp"
            android:gravity="center"
            android:textStyle="bold"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="6.5">
            <TextView
                android:id="@+id/Cans"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Do You Want To Exit?!"
                android:layout_marginLeft="10dp"
                android:textColor="#ffee00"
                android:layout_marginTop="10dp"
                android:textSize="16sp"/>
            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".25"/>
            <TextView
                android:id="@+id/Wans"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center"
                android:text="Do You Want To Exit?!"
                android:textColor="#ffee00"
                android:layout_marginTop="10dp"
                android:textSize="16sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="6.5">
            <TextView
                android:id="@+id/YouAns"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Do You Want To Exit?!"
                android:layout_marginLeft="10dp"
                android:textColor="#ffffff"
                android:layout_marginTop="10dp"
                android:textSize="16sp"/>
            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".25"/>
            <TextView
                android:id="@+id/YouSkip"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center"
                android:text="Do You Want To Exit?!"
                android:textColor="#ffffff"
                android:layout_marginTop="10dp"
                android:textSize="16sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/TotalScore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Do You Want To Exit?!"
            android:textColor="#c6ff5c"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10sp"
            android:gravity="center"
            android:textSize="25sp"
            android:textStyle="bold|italic"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="3sp"
            android:background="#343434"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/No"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:textAllCaps="false"
                android:textColor="#37b0e4"
                android:textSize="22sp"
                android:layout_weight="1"
                android:text="No" />
            <LinearLayout
                android:layout_width="3sp"
                android:layout_height="match_parent"
                android:background="#343434"/>
            <Button
                android:id="@+id/Yes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:textSize="22sp"
                android:textColor="#37b0e4"
                android:background="#00000000"
                android:text="Yes" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>