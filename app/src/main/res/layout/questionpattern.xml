<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/Pattern"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10"
        android:background="#e7e4e4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="4"
            android:background="@drawable/bg_allc">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="20">
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="0dp"
                   android:layout_weight="3">
                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:weightSum="3">

                      <TextView
                          android:id="@+id/QTime"
                          android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:layout_weight="1"
                          android:layout_gravity="end"
                          android:gravity="end|center"
                          android:paddingRight="16dp"
                          android:text="BCS"
                          android:textColor="#28ff3e"
                          android:textSize="18sp"
                          />

                  </LinearLayout>
               </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="5">
                    <TextView
                        android:id="@+id/Score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="16dp"
                        android:text="himon"
                        android:layout_weight="1"
                        android:textColor="@android:color/white"
                        android:textSize="20sp" />
                    <TextView
                        android:id="@+id/CATA"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="4"
                        android:gravity="center|end"
                        android:paddingRight="16dp"
                        android:text="Subject"
                        android:textColor="@android:color/holo_orange_light"
                        android:textSize="20sp" />



                </LinearLayout>
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".5"/>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".5"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="9.5">

                    <ScrollView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#48000000"
                        android:layout_gravity="bottom">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scrollbarStyle="insideInset">

                            <TextView
                                android:id="@+id/A1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_centerInParent="true"
                                android:text="Bangladesh"
                                android:paddingRight="16sp"
                                android:paddingLeft="16sp"
                                android:textColor="#ffe600"
                                android:textSize="20sp"
                                android:paddingBottom="4sp"/>

                        </RelativeLayout>


                    </ScrollView>
                </LinearLayout>
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="5"
            android:layout_marginLeft="8sp"
            android:layout_marginRight="8sp">
            <!-- chose button -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="4.4"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_marginTop="6sp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:weightSum="8">
                        <TextView
                            android:id="@+id/N1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/Choice"
                            android:textColor="@android:color/white"
                            android:gravity="center"
                            android:text="A"
                            android:textSize="20sp" />

                        <Button
                            android:id="@+id/A"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="7"
                            android:text="Aa"
                            android:textAllCaps="false"
                            android:textAlignment="textStart"
                            android:paddingLeft="10dp"
                            android:textSize="18sp"/>
                    </LinearLayout>
                </LinearLayout>
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".1"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:weightSum="8">
                        <TextView
                            android:id="@+id/N2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/Choice"
                            android:gravity="center"
                            android:textColor="@android:color/white"
                            android:text="B"
                            android:textSize="20sp" />

                        <Button
                            android:id="@+id/B"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="7"
                            android:text="Bb"
                            android:textAllCaps="false"
                            android:textAlignment="textStart"
                            android:paddingLeft="10dp"
                            android:textSize="18sp" />
                    </LinearLayout>


                </LinearLayout>
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".1"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:layout_weight="1">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:weightSum="8">
                        <TextView
                            android:id="@+id/N3"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/Choice"
                            android:gravity="center"
                            android:text="C"
                            android:textColor="@android:color/white"
                            android:textSize="20sp" />

                        <Button
                            android:id="@+id/C"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="7"
                            android:text="Cc"
                            android:textAlignment="textStart"
                            android:paddingLeft="10dp"
                            android:textSize="18sp"
                            android:textAllCaps="false"
                            />
                    </LinearLayout>

                </LinearLayout>
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".1"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:layout_weight="1">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:weightSum="8">
                        <TextView
                            android:id="@+id/N4"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/Choice"
                            android:gravity="center"
                            android:text="D"
                            android:textColor="@android:color/white"
                            android:textSize="20sp" />

                        <Button
                            android:id="@+id/D"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="7"
                            android:text="Dd"
                            android:textAlignment="textStart"
                            android:paddingLeft="10dp"
                            android:textSize="18sp"
                            android:textAllCaps="false" />
                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="2"
                android:background="#37c694">
                <Button
                    android:id="@+id/Skip"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Skip"
                    android:textAllCaps="false"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    android:background="#07a6f5"
                    android:layout_weight="1"
                    android:layout_marginRight="2sp"/>
                <Button
                    android:id="@+id/Exit"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Quite"
                    android:textAllCaps="false"
                    android:textColor="#fff200"
                    android:textSize="20sp"
                    android:layout_marginLeft="2sp"
                    android:background="#b60dbc"
                    android:layout_weight="1"/>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center">

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:progressBarStyleHorizontal"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerInParent="true"
            android:progress="90"
            android:progressDrawable="@drawable/mycircle"
            android:rotation="-75" />
        <TextView
            android:id="@+id/Timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:textAlignment="center"
            android:layout_centerInParent="true"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </RelativeLayout>


</RelativeLayout>